<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_item_card"
    android:layout_width="167.5dp"
    android:layout_height="290dp"
    android:background="@drawable/gray_background">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/menu_item_card_name"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/menu_item_card_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/food_example"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/gray_background"/>

        <ImageView
            android:id="@+id/menu_item_card_specials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_sale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/menu_item_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:text="Том Ям"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/menu_item_card_weight"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/menu_item_card_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="500 г"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/menu_item_card_cost_card"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_item_card_cost_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        android:elevation="20dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/menu_item_card_new_cost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="720 ₽"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/menu_item_card_old_cost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800 ₽"
                android:layout_marginVertical="12dp"
                android:textSize="14sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>